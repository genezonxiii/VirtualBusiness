<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="VirtualBusiness" packages="tw.com.aber">
	
	<Appenders>
	<Console name="STDOUT" target="SYSTEM_OUT">
<!--       <PatternLayout pattern="%d %p %c [%t] %m%n"/> -->
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %r [%t] %-5p %c:%L %x - %m%n" charset="UTF-8"/>
    </Console>
    <File name="vbLog" append="true" fileName="/data/log/VirtualBusiness/VirtualBusiness.log">
      <PatternLayout>
        <Pattern>%d %p %c [%t] %m%n</Pattern>
        <charset>UTF-8</charset>
      </PatternLayout>
    </File>
    <RollingFile name="vbRFLog" append="true" fileName="/data/log/VirtualBusiness/VirtualBusiness.log"
    	filePattern="/data/log/VirtualBusiness/$${date:yyyy-MM}/VirtualBusiness-%d{yyyy-MM-dd}-%i.log.gz">>
      <PatternLayout>
        <Pattern>%d %p %c [%t] %m%n</Pattern>
        <charset>UTF-8</charset>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="20 MB"/>
      </Policies> 
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="vbLog"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>